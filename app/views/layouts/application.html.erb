<!DOCTYPE html>
<html>
  <head>
    <title>Twitter</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if flash[:notice]%>
      <div class="notification is-primary global-notification">
        <p class="notice"><%= notice %></p>
      </div>
    <%end%>
    <% if flash[:alert]%>
      <div class="notification is-danger global-notification">
        <p class="alert"><%= alert %></p>
      </div>
    <%end%>
    <nav class='navbar is-info'>
      <div class='navbar-brand'>
        <%=link_to root_path, class: 'navbar-item' do%>
          <h1 class='title is-4'>Twitter</h1>
        <%end%>
        <div class="navbar-burger" data-target='navbarExemple'>
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
      <div id='navbarExemple' class='navbar-menu'>
        <div class='navbar-end'>
          <div class='navbar-item'>
            <div class='field is-grouped'>
              <p class='control'>
                <%=link_to 'New Tweet', root_path, class: 'button is-info is-inverted'%>
              </p>
              <p class='control'>
                <% if user_signed_in? %>
                  <%= link_to current_user.name, edit_user_registration_path, class: 'button is-info' %>
                  <%= button_to 'Log out', destroy_user_session_path, method: :delete, class: 'button is-info' %>
                <% else %>
                  <%= link_to 'Sing Up', new_user_registration_path, class: 'button is-info' %>
                  <%= link_to 'Log in', new_user_session_path, class: 'button is-info' %>
                <% end %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
